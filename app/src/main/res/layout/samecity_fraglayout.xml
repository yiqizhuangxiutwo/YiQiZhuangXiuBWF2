<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/samecity_fragment">

        <FrameLayout
            android:id="@+id/tongchenghuodong_fragment"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="@color/colorAccent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/tongcheng_recyclerview_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
                <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dp"
                android:background="@drawable/samecity_hot">
                <ImageView
                    android:id="@+id/tongcheng_img_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/activity_hot_sign"/>
                <TextView
                    android:id="@+id/tongcheng_text_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="火热报名中..." />
                </LinearLayout>
        </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/tongcheng_end_img_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@drawable/activity_end_time_flag"/>
        <TextView
            android:id="@+id/tongcheng_end_text_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="报名截止日期：2017年12月12日"/>
    </LinearLayout>

</LinearLayout>