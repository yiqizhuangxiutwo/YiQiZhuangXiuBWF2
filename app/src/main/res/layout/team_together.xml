<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/subview_titile">
    </include>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_teamtogether"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        app:tabBackground="@color/windowBackground"
        app:tabIndicatorColor="@color/tabIndicatorColor"
        android:layout_gravity="center_horizontal"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/green"
        app:tabTextColor="@color/tabIndicatorColor" />

    <View
        android:id="@+id/view_pager_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/teamtogether_viewpager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

    </android.support.v4.view.ViewPager>
</LinearLayout>
