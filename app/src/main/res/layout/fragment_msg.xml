<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textSize="25dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#c1bbbb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center|left">
        <ImageView
            android:id="@+id/msg_imageview_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msg_comment_flag"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/msg_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=" 新的评论"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center">
            <ImageButton
                android:id="@+id/msg_imagebutton_login1"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:background="@drawable/more"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="25dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center|left">
        <ImageView
            android:id="@+id/msg_imageview_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_zan_press"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/msg_tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=" 新的赞"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center">
            <ImageButton
                android:id="@+id/msg_imagebutton_login2"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:background="@drawable/more"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="25dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center|left">
        <ImageView
            android:id="@+id/msg_imageview_callme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msg_call_me_flag"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/msg_tv_callme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=" @我"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center">
            <ImageButton
                android:id="@+id/msg_imagebutton_login3"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:background="@drawable/more"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="25dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center|left">
        <ImageView
            android:id="@+id/msg_imageview_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msg_system_flag"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/msg_tv_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=" 系统通知"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center">
            <ImageButton
                android:id="@+id/msg_imagebutton_login4"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:background="@drawable/more"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="25dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>