<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="40dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/article_bottom">
        <TextView
            android:id="@+id/image_button_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/article_bottom_text"
            android:textSize="20dp"
            android:textColor="@color/dark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/image_button_tag01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/zan_selected"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/image_button_tag02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/zixun_selected"
            android:background="@color/white" />
        <ImageButton
            android:id="@+id/image_button_tag03"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/share_selected"
            android:background="@color/white" />
    </LinearLayout>
</LinearLayout>