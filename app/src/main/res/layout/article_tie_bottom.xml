<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="40dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:padding="2dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/text_05"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp"
            android:background="@drawable/edit_style_02"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/image_button_tag01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/zan_selected"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/image_button_tag02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/star_selected"
            android:background="@color/white" />
        <ImageButton
            android:id="@+id/image_button_tag03"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/share_selected"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>