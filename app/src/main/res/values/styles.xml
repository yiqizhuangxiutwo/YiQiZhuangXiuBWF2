<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="main_toggle_text">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="mytextsize">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="zzxd_inner_message_text">
        <item name="android:textSize">18dp</item>
    </style>


    <style name="fiveStarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">30.0dip</item>
        <item name="android:progressDrawable">@drawable/five_rating_bar</item>
        <item name="android:minHeight">15.0dip</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0.0</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="headertwo_up_text">
        <item name="android:text">未完成</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="headertwo_down_text">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">17dp</item>
    </style>



    <style name="SlideRightAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_right_in</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/activity_right_in</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/activity_right_out</item>
    </style>


    <style name="AppTheme.TransparentActivity" parent="Theme.AppCompat.NoActionBar">
        <!--设置滑动的Activity背景透明-->
        <!-- <item name="android:windowBackground">@android:color/transparent</item>-->
        <!-- <item name="android:windowIsTranslucent">true</item>-->
        <!-- android:windowAnimationStyle引入动画 -->
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
    </style>


    <style name="FunctionDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/activity_right_in</item>
        <item name="android:windowExitAnimation">@anim/activity_right_out</item>
    </style>

</resources>
